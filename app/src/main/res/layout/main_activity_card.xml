<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:backgroundTint="@color/background"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardPhoto"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/cardFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/cardPhoto"
                android:text="Apples"
                android:textColor="@color/textOnBackground"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardSurName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/cardFirstName"
                android:text="TextView"
                android:textColor="@color/textOnBackground"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cardLevel"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardFirstName"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/cardPhoto"
                android:text="Apples ar yummy"
                android:textColor="@color/textOnBackground" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardLevel"
                android:layout_toEndOf="@id/cardPhoto"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:text="TextView" />

            <Button
                android:id="@+id/matchButton"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardSurName"
                android:layout_alignTop="@+id/cardFirstName"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="11dp"
                android:backgroundTint="@color/secondary"
                android:text="GO"
                android:textSize="30sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>